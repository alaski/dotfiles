Config { font = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90
       , lowerOnStart = False
       , commands = [ Run MultiCpu ["-t","Cpu: <total>","-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Network "wlan0" ["-L","0","-H","70","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %k:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=grey>%multicpu%</fc> <fc=grey> ~ %memory% ~ %wlan0%</fc> ~ <fc=#ee9a00>%date%</fc>"
       }
